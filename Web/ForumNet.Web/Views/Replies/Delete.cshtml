@model ForumNet.Web.ViewModels.Replies.RepliesDeleteViewModel
@{
    ViewData["Title"] = "Delete";
}

<br />
<div class="container">
    <div class="tt-single-topic-list" style="word-break: break-word;">
        <div class="tt-item">
            <div class="tt-info-box">
                <h6 class="tt-title">Are you sure you want to delete this reply?</h6>
                <form asp-area="" asp-controller="Replies" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-secondary">Yes</button>
                    <a asp-area="" asp-controller="Replies" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">No</a>
                </form>
            </div>
        </div>
        <div class="tt-item">
            <div class="tt-single-topic">
                <div class="tt-item-header pt-noborder">
                    <div class="tt-item-info info-top">
                        <div class="tt-avatar-icon">
                            <i class="tt-icon"><svg><use xlink:href="@Model.Author.ProfilePicture"></use></svg></i>
                        </div>
                        <div class="tt-avatar-title">
                            <a asp-area="" asp-controller="Users" asp-action="Threads" asp-route-id="@Model.Author.Id">
                                @Model.Author.UserName
                            </a>
                        </div>
                        <a href="#" class="tt-info-time">
                            <i class="tt-icon"><svg><use xlink:href="#icon-time"></use></svg></i>@Model.CreatedOn
                        </a>
                    </div>
                </div>
                <div class="tt-item-description">
                    <p>@Html.Raw(Model.SanitizedDescription)</p>
                </div>
                <div class="tt-item-info info-bottom">
                    <partial name="_DeleteReactionsPartial" model="Model" />
                </div>
            </div>
        </div>
    </div>
</div>