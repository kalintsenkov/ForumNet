@model ForumNet.Web.ViewModels.Posts.PostsDeleteDetailsViewModel
@{
    ViewData["Title"] = "Delete";
}

<br />
<div class="container">
    <div class="tt-single-topic-list" style="word-break:break-all">
        <div class="tt-item">
            <div class="tt-info-box">
                <h6 class="tt-title">Are you sure you want to delete this post?</h6>
                <form asp-area="" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-secondary">Yes</button>
                    <a asp-area="" asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">No</a>
                </form>
            </div>
        </div>
        <div class="tt-item">
            <div class="tt-single-topic">
                <div class="tt-item-header">
                    <div class="tt-item-info info-top">
                        <div class="tt-avatar-icon">
                            <i class="tt-icon"><svg><use xlink:href="@Model.Author.ProfilePicture"></use></svg></i>
                        </div>
                        <div class="tt-avatar-title">
                            <a asp-area="" asp-controller="Users" asp-action="Threads" asp-route-id="@Model.Author.Id">
                                @Model.Author.UserName
                            </a>
                        </div>
                        <div class="tt-info-time">
                            <i class="tt-icon"><svg><use xlink:href="#icon-time"></use></svg></i>@Model.CreatedOn
                        </div>
                    </div>
                    <h3 class="tt-item-title">
                        <a href="#">@Model.Title</a>
                    </h3>
                    <div class="tt-item-tag">
                        <ul class="tt-list-badge">
                            <li>
                                <a asp-area="" asp-controller="Categories" asp-action="Details" asp-route-id="@Model.Category.Id">
                                    <span class="tt-color03 tt-badge">@Model.Category.Name</span>
                                </a>
                            </li>
                            @foreach (var tag in Model.Tags)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Tags" asp-action="Details" asp-route-id="@tag.Id">
                                        <span class="tt-badge">@tag.Name</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="tt-item-description">
                    <p>@Html.Raw(Model.SanitizedDescription)</p>
                </div>
            </div>
        </div>

        <partial name="_DeleteThreadStatusPartial.cshtml" model="@Model" />
    </div>
</div>