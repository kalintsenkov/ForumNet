@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<div class="container">
    <div class="tt-loginpages-wrapper">
        <div class="tt-loginpages">
            <div class="tt-block-title">
                <img src="~/images/logo.png" alt="logo" />
                <div class="tt-title">
                    @ViewData["Title"]
                </div>
                <div class="tt-description" role="alert">
                    <a href="/Identity/Account/Login"
                       class="tt-btn-icon"
                       aria-label="Close">
                        <i class="tt-icon far fa-times-circle"></i>
                    </a>
                    @Model.StatusMessage
                </div>
            </div>
        </div>
    </div>
</div>