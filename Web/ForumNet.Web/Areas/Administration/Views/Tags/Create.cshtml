@model ForumNet.Web.InputModels.Tags.TagsCreateInputModel

@{
    ViewData["Title"] = "Create New Tag";
}

<div class="container">
    <div class="tt-wrapper-inner">
        <br />
        <h1 class="tt-title-border">
            @ViewData["Title"]
        </h1>
        <div class="row">
            <div class="col-md-4">
                <form class="form-default" asp-area="Administration" asp-controller="Tags" asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <div class="tt-value-wrapper">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <a asp-area="Administration" asp-controller="Tags" asp-action="All" class="btn btn-primary btn-width-lg">Back</a>
                        <button type="submit" class="btn btn-secondary btn-width-lg">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}